
@model GeneratePdfFromView.Controllers.PaymentReceiptViewModel

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Payment Receipt</title>
    <style>
        body {
            font-family: Arial, sans-serif;
            background-color: #f4f4f4;
            padding: 20px;
        }

        .invoice-container {
            max-width: 800px;
            margin: 0 auto;
            background-color: #fff;
            padding: 20px;
            border: 1px solid #ccc;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
            page-break-inside: avoid;
        }

        .receipt {
            max-width: 600px;
            margin: 0 auto;
            background-color: #fff;
            padding: 20px;
            border: 1px solid #ccc;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
            page-break-inside: avoid;
        }

        .header {
            text-align: center;
            margin-bottom: 20px;
        }

            .header img {
                max-width: 150px;
                height: auto;
            }

        .details {
            margin-bottom: 20px;
        }

            .details p {
                margin: 5px 0;
            }

        .items {
            width: 100%;
            border-collapse: collapse;
            margin-bottom: 20px;
        }

            .items th, .items td {
                border: 1px solid #ddd;
                padding: 8px;
                text-align: left;
            }

            .items th {
                background-color: #f2f2f2;
            }

        .total {
            text-align: right;
            font-size: 18px;
        }

        .footer {
            margin-top: 20px;
            text-align: center;
        }

            .footer p {
                margin: 5px 0;
            }

        .left-section {
            flex: 1; /* Take up remaining space */
        }

            .left-section img {
                display: block;
                width: 201px;
                height: 86px;
                position: absolute;
                top: 60px;
            }

        .right-section {
            flex: 2; 
            text-align: right;
        }

            .right-section h2 {
                margin-top: 0;
                margin-bottom: 10px;
                font-size: 24px;
            }

            .right-section p {
                margin: 0;
                font-size: 14px;
                line-height: 1.6;
            }
    </style>
</head>
<body>
    <div class="invoice-container">
        <div class="invoice-header">
            <div class="left-section">
                <img src="~/Images/circle.png" width="150" height="70" />
            </div>
            <div class="right-section">
                <h2>Payment Receipt</h2>
                <p>
                    Company Name<br>
                    Address Line 1<br>
                    Address Line 2<br>
                    City, State, Zip Code<br>
                    Phone: +1234567890<br>
                    Email: info@example.com
                </p>
            </div>
        </div>

        <div class="details">
            <p>
                <strong>Invoice Number:</strong> @Model.ReceiptNumber<br>
                <strong>Date:</strong> @Model.PaymentDate.ToString("dd/MM/yyyy")<br>
                <strong>Customer Name:</strong> @Model.CustomerName<br>
                <strong>Customer Email:</strong> @Model.CustomerName<br>
            </p>
        </div>

        <table class="items">
            <thead>
                <tr>
                    <th>Description</th>
                    <th>Quantity</th>
                    <th>Unit Price</th>
                    <th>Amount</th>
                </tr>
            </thead>
            <tbody>
                <tr>
                    <td>Item 1</td>
                    <td>1</td>
                    <td>$100.00</td>
                    <td>$100.00</td>
                </tr>
                <!-- Add more rows for additional items if needed -->
            </tbody>
        </table>

        <div class="total">
            <p><strong>Total Amount:</strong> $100.00</p>
        </div>

        <div class="footer">
            <p>Thank you for your business!</p>
        </div>
    </div>

    <br />

    <br />

    <div class="receipt">
        <div class="header">
            <img src="~/Images/circle.png" width="200" height="200" />
            <h2>Payment Receipt</h2>
        </div>

        <div class="details">
            <p><strong>Invoice Number:</strong> RCT123456</p>
            <p><strong>Date:</strong> 05/07/2024</p>
            <p><strong>Customer Name:</strong> John Doe</p>
            <p><strong>Customer Email:</strong> john.doe@example.com</p>
        </div>

        <table class="items">
            <thead>
                <tr>
                    <th>Description</th>
                    <th>Quantity</th>
                    <th>Unit Price</th>
                    <th>Amount</th>
                </tr>
            </thead>
            <tbody>
                <tr>
                    <td>Product A</td>
                    <td>2</td>
                    <td>$50.00</td>
                    <td>$100.00</td>
                </tr>
                <tr>
                    <td>Product B</td>
                    <td>1</td>
                    <td>$80.00</td>
                    <td>$80.00</td>
                </tr>
                <tr>
                    <td colspan="3"><strong>Total Amount:</strong></td>
                    <td><strong>$180.00</strong></td>
                </tr>
            </tbody>
        </table>

        <div class="footer">
            <p>Thank you for your business!</p>
        </div>
    </div>

</body>
</html>
